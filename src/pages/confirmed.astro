---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thanks! - Approachable Design" description="Thanks for letting me know.">
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <div class="w-20 h-20 bg-brand-coral/20 rounded-full flex items-center justify-center mx-auto mb-8">
          <svg class="w-10 h-10 text-brand-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">
          Thanks for letting me know!
        </h1>
        <p class="text-lg text-white/60 mb-12">
          Your response has been recorded.
        </p>
        <a href="/" class="btn btn-primary">
          Back to Home
        </a>
      </div>
    </div>
  </section>
</Layout>
