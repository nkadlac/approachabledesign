---
import Layout from '../../layouts/Layout.astro';
import AboutNate from '../../components/AboutNate.astro';

// Generate current date at build time
const lastUpdated = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const whatsIncluded = [
  "Immediate & Lifetime Access",
  "Vault growing to 1,000 examples",
  "Hand-picked sites",
  "Full-page screenshots",
  "No login necessary",
  "Filtered by type",
  "Duplicate Notion Database"
];
---

<Layout title="The Design Vault - Approachable Design" description="Stop spending hours searching the web for design inspiration. Start with a highly-curated collection of designed sites and never feel stuck again.">
  <!-- Hero Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-12">
        <span class="text-brand-coral text-sm font-semibold uppercase tracking-wider">Design Inspiration</span>
        <h1 class="font-display-black-italic text-4xl md:text-5xl lg:text-6xl mt-4 mb-6">
          The Design Vault
        </h1>
        <p class="text-2xl md:text-3xl text-white/80 mb-6">
          A collection of drool-worthy design inspiration
        </p>
        <p class="text-lg text-white/60 max-w-2xl mx-auto mb-8">
          Stop spending hours searching the web for design inspiration. Start with a highly-curated collection of designed sites and never feel stuck again.
        </p>
        <a href="https://natekadlac.gumroad.com/l/design-vault" target="_blank" rel="noopener noreferrer" class="btn btn-primary text-lg px-8 py-4">
          Get The Design Vault - $149
        </a>
      </div>

      <!-- Product Video -->
      <div class="max-w-5xl mx-auto">
        <video
          src="/images/products/design-vault-intro.mp4"
          autoplay
          loop
          muted
          playsinline
          class="w-full rounded-2xl shadow-2xl"
        ></video>
      </div>
    </div>
  </section>

  <!-- Podcast Cover Art Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <!-- Header -->
      <div class="max-w-4xl mx-auto text-center mb-16">
        <span class="inline-block px-6 py-2 rounded-full border-2 border-[#2eff77] text-[#2eff77] text-sm font-semibold uppercase tracking-wider mb-6">
          New! Podcast Cover Art
        </span>
        <h2 class="font-display-black-italic text-3xl md:text-4xl lg:text-5xl mb-6">
          The Design Vault brings non-stop website & podcast inspiration
        </h2>
        <p class="text-xl text-white/70">
          You need fresh design ideas. This growing collection will deliver and assist you when you are feeling creatively stuck.
        </p>
      </div>

      <!-- Two Column Layout -->
      <div class="md:flex items-center gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <img
            src="/images/products/notion-grid.avif"
            alt="Design Vault Notion gallery view"
            class="w-full rounded-2xl"
          />
        </div>
        <div class="md:w-1/2">
          <h3 class="font-display-black-italic text-2xl md:text-3xl lg:text-4xl mb-6">
            Get inspired in seconds
          </h3>
          <p class="text-white/70 text-lg mb-6">
            Browse through the websites and ideas in a responsive gallery view, which you can access on any mobile, tablet, or computer device without an account.
          </p>
          <p class="text-white/70 text-lg">
            Review similar websites and products that match your products or services in seconds.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Living Vault Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Progress Capsule -->
        <div class="flex justify-center mb-6">
          <div class="progress-capsule">
            <div class="progress-indicator">
              <span class="text-brand-dark font-heading font-bold text-2xl md:text-3xl">200+</span>
            </div>
            <span class="progress-text text-white/80 font-heading font-semibold text-sm md:text-base uppercase tracking-wider">1,000 Beautiful Sites</span>
          </div>
        </div>

        <!-- Last Updated -->
        <p class="text-brand-coral text-sm font-medium uppercase tracking-wider mb-8">
          Last Updated {lastUpdated}
        </p>

        <!-- Headline -->
        <h2 class="font-display-black-italic text-3xl md:text-4xl lg:text-5xl mb-6">
          A living vault building its way up to 1,000 hand-picked websites and podcasts from all over the world
        </h2>

        <!-- Description -->
        <p class="text-white/70 text-xl max-w-3xl mx-auto">
          As the vault grows, the price will increase. Lock in your price as the vault designs will hit 1,000 sites and podcasts in the next year.
        </p>
      </div>
    </div>
  </section>

  <!-- Staggered Features Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <!-- Feature 1: Text left, Image right -->
      <div class="md:flex items-center gap-12 mb-24">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h3 class="font-display-black-italic text-2xl md:text-3xl lg:text-4xl mb-6">
            Get to know the design details
          </h3>
          <p class="text-white/70 text-lg">
            You'll find metadata on each site such as the services type, domain url, creator, last updated, and a social channel. No account needed!
          </p>
        </div>
        <div class="md:w-1/2">
          <img
            src="/images/products/design-details.avif"
            alt="Design details metadata view"
            class="w-full rounded-2xl"
          />
        </div>
      </div>

      <!-- Feature 2: Image left, Text right -->
      <div class="md:flex items-center gap-12 flex-row-reverse mb-24">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h3 class="font-display-black-italic text-2xl md:text-3xl lg:text-4xl mb-6">
            Hi-res, full page design screenshots to assist your research process
          </h3>
          <p class="text-white/70 text-lg">
            Inside the design vault, each website includes a hi-res screenshot so you can see and measure what the designers did to make it so unique.
          </p>
        </div>
        <div class="md:w-1/2">
          <img
            src="/images/products/hgg.avif"
            alt="Full page screenshot examples"
            class="w-full rounded-2xl"
          />
        </div>
      </div>

      <!-- Feature 3: Text left, Tags right -->
      <div class="md:flex items-center gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h3 class="font-display-black-italic text-2xl md:text-3xl lg:text-4xl mb-6">
            Quickly filter designs by page type
          </h3>
          <p class="text-white/70 text-lg">
            Each site is organized by tags, so you can easily find examples and design ideas similar to the project you're working on, like inspirational <span class="text-brand-coral">personal websites</span>.
          </p>
        </div>
        <div class="md:w-1/2">
          <img
            src="/images/products/tags.svg"
            alt="Filter tags including Landing Page, Communities, Courses, Podcasts, Personal Sites, Blogs, Agencies, SaaS Sites, Ecommerce"
            class="w-full"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Light and Dark Mode Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="md:flex items-center gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <img
            src="/images/products/light-dark-vault.avif"
            alt="Design Vault in light and dark mode"
            class="w-full"
          />
        </div>
        <div class="md:w-1/2">
          <h3 class="font-display-black-italic text-3xl md:text-4xl lg:text-5xl mb-6">
            Light and dark mode
          </h3>
          <p class="text-white/70 text-xl">
            Sifting through design ideas and products can take awhile. Now you can do it using the design vault without burning out your retinas at any time of the day.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Line Divider -->
  <div class="flex justify-center py-8">
    <img src="/images/site/line-divider.svg" alt="" class="h-32 md:h-48" />
  </div>

  <!-- About Creator -->
  <section class="py-16">
    <div class="container">
      <AboutNate eyebrow="About the Creator" headline="Hi, I'm Nate!" />
    </div>
  </section>

  <!-- Line Divider -->
  <div class="flex justify-center py-8">
    <img src="/images/site/line-divider.svg" alt="" class="h-32 md:h-48" />
  </div>

  <!-- Pricing Section -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="max-w-xl mx-auto text-center">
        <!-- Headline -->
        <h2 class="font-display-black-italic text-4xl md:text-5xl mb-4">Pricing</h2>
        <p class="text-white/70 text-lg mb-12">
          Lifetime access with monthly updates up to 1,000 design examples
        </p>

        <!-- Pricing Card -->
        <div class="pricing-card rounded-3xl p-8 md:p-10 border-4 border-brand-purple">
          <!-- Price -->
          <p class="text-5xl md:text-6xl font-bold text-brand-dark mb-4">$149</p>
          <p class="font-heading font-bold text-brand-dark uppercase tracking-wider mb-1">
            Own the Growing Database
          </p>
          <p class="text-brand-dark/60 text-sm mb-8">
            (Price will increase every 100 sites)
          </p>

          <!-- Features List -->
          <ul class="space-y-4 text-left mb-8">
            {whatsIncluded.map((item) => (
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-brand-dark/70 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-brand-dark font-medium">{item}</span>
              </li>
            ))}
          </ul>

          <!-- CTA Button -->
          <a href="https://natekadlac.gumroad.com/l/design-vault" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 w-full bg-brand-purple text-white font-heading font-semibold text-lg px-8 py-4 rounded-xl hover:bg-brand-purple-light transition-colors">
            Get Instant Access
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .font-display-black-italic {
    font-family: var(--font-display-black-italic);
  }

  .pricing-card {
    background: linear-gradient(135deg, #e8e4f5 0%, #d8d4eb 100%);
  }

  .progress-capsule {
    display: flex;
    align-items: center;
    background-color: #3a3a4a;
    border-radius: 9999px;
    padding: 0.5rem;
    width: 100%;
    max-width: 500px;
  }

  .progress-indicator {
    width: 20%;
    aspect-ratio: 1;
    min-width: 80px;
    max-width: 100px;
    background-color: #2eff77;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 0 30px rgba(46, 255, 119, 0.3);
  }

  .progress-text {
    flex: 1;
    text-align: center;
    padding-right: 1rem;
  }

  @media (min-width: 768px) {
    .progress-capsule {
      padding: 0.6rem;
      max-width: 600px;
    }

    .progress-indicator {
      min-width: 100px;
      max-width: 120px;
    }
  }
</style>
