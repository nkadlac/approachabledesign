  <div class="flex justify-center py-16">
    <img src="/images/site/line-divider.svg" alt="" class="h-48 md:h-64" />
  </div>

  <!-- Video Overview -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <p class="text-brand-coral text-sm font-semibold uppercase tracking-wider mb-4">Overview</p>
