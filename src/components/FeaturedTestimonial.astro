---
interface Props {
  quote: string;
  author: string;
  role: string;
  image?: string;
  variant?: 'dark' | 'light';
}

const { quote, author, role, image, variant = 'dark' } = Astro.props;
const isLight = variant === 'light';
---

<div class:list={[
  "py-16 md:py-24",
  isLight ? "bg-white" : "bg-brand-dark"
]}>
  <div class="container max-w-4xl text-center">
    <!-- Decorative quote mark -->
    <svg
      class:list={[
        "w-16 h-16 mx-auto mb-8",
        isLight ? "text-brand-dark/20" : "text-white/20"
      ]}
      viewBox="0 0 24 24"
      fill="currentColor"
    >
      <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
    </svg>

    <!-- Quote -->
    <blockquote class:list={[
      "font-display text-2xl md:text-3xl lg:text-4xl leading-relaxed mb-10",
      isLight ? "text-brand-dark" : "text-white"
    ]}>
      "{quote}"
    </blockquote>

    <!-- Author -->
    <div class="flex items-center justify-center gap-4">
      {image && (
        <img
          src={image}
          alt={author}
          class="w-14 h-14 rounded-full object-cover"
        />
      )}
      <div class="text-left">
        <p class:list={[
          "font-heading font-bold",
          isLight ? "text-brand-dark" : "text-white"
        ]}>
          {author}
        </p>
        <p class:list={[
          "text-sm",
          isLight ? "text-brand-dark/60" : "text-white/60"
        ]}>
          {role}
        </p>
      </div>
    </div>
  </div>
</div>
