---
interface Props {
  quote: string;
  author: string;
  role: string;
  image?: string;
}

const { quote, author, role, image } = Astro.props;
---

<div class="max-w-4xl mx-auto text-center">
  <!-- Decorative Quote Mark -->
  <img src="/images/site/icon-quote.svg" alt="" class="w-12 md:w-16 mx-auto mb-8" />

  <!-- Quote -->
  <p class="text-2xl md:text-3xl lg:text-4xl text-white italic leading-relaxed mb-10">
    {quote}
  </p>

  <!-- Author -->
  <div class="flex items-center justify-center gap-4">
    {image && (
      <img
        src={image}
        alt={author}
        class="w-14 h-14 rounded-full object-cover"
      />
    )}
    <div class="text-left">
      <p class="font-heading font-bold text-white">{author}</p>
      <p class="text-white/50">{role}</p>
    </div>
  </div>
</div>
