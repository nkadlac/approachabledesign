---
interface Props {
  variant?: 'dark' | 'light';
}

const { variant = 'dark' } = Astro.props;

const quickLinks = [
  { href: '/about', label: 'Start Here' },
  { href: '/articles', label: 'Blog' },
  { href: '/courses', label: 'Courses' },
  { href: '/products', label: 'Products' },
  { href: '/newsletter', label: 'Newsletter' },
  { href: 'https://twitter.com/kadlac', label: 'X (Twitter)', external: true },
];

const products = [
  { href: '/courses', label: 'The Creator Design Kit' },
  { href: '/products', label: 'YouTube Thumbnail Masterclass' },
  { href: '/products', label: 'The Design Vault' },
  { href: '/products', label: 'Design Checklist' },
];

const currentYear = new Date().getFullYear();

const isLight = variant === 'light';
---

<footer class:list={[
  "border-t mt-auto",
  isLight ? "bg-brand-dark border-brand-dark/10" : "bg-brand-dark-light border-white/10"
]}>
  <div class="max-w-[1200px] mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-8">
      <!-- Bio Column -->
      <div class="md:col-span-5">
        <p class="text-xl leading-relaxed text-white">
          <strong class="font-bold">Approachable Design</strong>
        </p>
        <p class="mt-4 text-white/70 leading-relaxed">
          Design smarter, not harder. Join thousands of solopreneurs & professionals learning to build authentic brands and improve visual design skills without hiring a designer.
        </p>
        <p class="mt-4 text-white/70 leading-relaxed">
          Created by Nate Kadlac, a former creative director and product designer.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="md:col-span-3 md:col-start-7">
        <h4 class="font-heading font-semibold text-sm uppercase tracking-wider mb-6 text-white/50">
          Quick Links
        </h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-brand-coral transition-colors text-white/80 inline-flex items-center gap-1.5"
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.label}
                {link.external && (
                  <svg class="w-4 h-4 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M7 17L17 7" />
                    <path d="M7 7h10v10" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div class="md:col-span-3">
        <h4 class="font-heading font-semibold text-sm uppercase tracking-wider mb-6 text-white/50">
          Products
        </h4>
        <ul class="space-y-3">
          {products.map((link) => (
            <li>
              <a
                href={link.href}
                class="hover:text-brand-coral transition-colors text-white/80"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-white/10">
      <p class="text-sm text-white/40">
        &copy; {currentYear} Approachable Design LLC. All rights reserved.
      </p>
    </div>
  </div>
</footer>
